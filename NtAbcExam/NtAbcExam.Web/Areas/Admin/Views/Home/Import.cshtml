
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>导入题库</h5>
                </div>
                <div class="ibox-content">
                    <form action="@Url.Action("Import", "Home")" id="form1" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">选择文件：</label>
                            <div class="col-sm-9">
                                <input type="file" name="files" data-filename-placement="inside" style="display: inline-block">
                                <p style="color: Red; text-align: center;">@ViewBag.error</p>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit" onclick="return save()">保存</button>
                                <a href="@Url.Action("Index","News")" class="btn btn-white">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>