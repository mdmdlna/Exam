@using NtAbcExam.Web.Areas.Admin.Common
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <title>农行考试系统管理后台</title>
    <link href=@Url.Content("~/Areas/Admin/style/css/bootstrap.min.css") rel="stylesheet">
    <link href=@Url.Content("~/Areas/Admin/style/css/font-awesome.css") rel="stylesheet">
    <link href=@Url.Content("~/Areas/Admin/style/css/iconfont.css") rel="stylesheet">
    <link href=@Url.Content("~/Areas/Admin/style/css/animate.min.css") rel="stylesheet">
    <link href=@Url.Content("~/Areas/Admin/style/css/style.css") rel="stylesheet">
</head>
<body class="fixed-sidebar full-height-layout gray-bg" style="overflow:hidden">
    <div id="wrapper">
        <!--左侧导航开始-->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="nav-close">
                <i class="fa fa-times-circle"></i>
            </div>
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <span><img alt="image" class="img-circle" src=@Url.Content("~/Areas/Admin/style/img/profle.png") /></span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs"><strong class="font-bold">@AdminLoginHelper.LoginInfo.UserName</strong></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li>
                                    <a class="J_menuItem" href="mailbox.html">修改密码</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="@Url.Action("Logout","Home")">安全退出</a>
                                </li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            H+
                        </div>
                    </li>


                    <li>
                        <a href="#">
                            <i class="iconfont">&#xe616;</i>
                            <span class="nav-label">考试题库</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="@Url.Action("ExamTestIndex", "Exam")" data-index="0">考试管理</a>
                                
                                <a class="J_menuItem" href="@Url.Action("Index", "Exam")" data-index="0">题库管理</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#">
                            <i class="iconfont">&#xe616;</i>
                            <span class="nav-label">科目管理</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="@Url.Action("Index", "Subject")" data-index="0">科目管理</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#">
                            <i class="iconfont">&#xe616;</i>
                            <span class="nav-label">部门管理</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="@Url.Action("Index","Dept")" data-index="0">部门管理</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#">
                            <i class="iconfont">&#xe616;</i>
                            <span class="nav-label">操作员管理</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="@Url.Action("Index","AdminUser")" data-index="0">操作员管理</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#">
                            <i class="iconfont">&#xe616;</i>
                            <span class="nav-label">人员管理</span>
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a class="J_menuItem" href="@Url.Action("Index","Emp")" data-index="0">人员管理</a>
                            </li>
                        </ul>
                    </li>



                </ul>
            </div>
        </nav>
        <!--左侧导航结束-->
        <!--右侧部分开始-->
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li class="hidden-xs">
                            <a class="navbar-minimalize btn " href="#"><i class="fa fa-bars"></i> </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="row content-tabs">
                <button class="roll-nav roll-left J_tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content">
                        <a href="javascript:;" class="active J_menuTab" data-id="@Url.Action("Welcome","Home")">首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right J_tabRight">
                    <i class="fa fa-forward"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown J_tabClose" data-toggle="dropdown">
                        关闭操作<span class="caret"></span>

                    </button>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        <li class="J_tabShowActive">
                            <a>定位当前选项卡</a>
                        </li>
                        <li class="divider"></li>
                        <li class="J_tabCloseAll">
                            <a>关闭全部选项卡</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>关闭其他选项卡</a>
                        </li>
                    </ul>
                </div>
                <a href="@Url.Action("Logout","Home")" class="roll-nav roll-right J_tabExit"><i class="fa fa fa-sign-out"></i> 退出</a>
            </div>
            <div class="row J_mainContent" id="content-main">
                <iframe class="J_iframe" name="iframe0" width="100%" height="100%" src="@Url.Action("Welcome","Home")" frameborder="0" data-id="@Url.Action("Welcome","Home")" seamless></iframe>
            </div>
        </div>
        <!--右侧部分结束-->
    </div>
    <script src=@Url.Content("~/Areas/Admin/scripts/jquery.min.js?v=2.1.4")></script>
    <script src=@Url.Content("~/Areas/Admin/scripts/plugins/layer/layer.js")></script>
    <script src=@Url.Content("~/Areas/Admin/scripts/bootstrap.min.js?v=3.3.6")></script>
    <script src=@Url.Content("~/Areas/Admin/scripts/plugins/metisMenu/jquery.metisMenu.js")></script>
    <script src=@Url.Content("~/Areas/Admin/scripts/plugins/slimscroll/jquery.slimscroll.min.js")></script>
    <script src=@Url.Content("~/Areas/Admin/scripts/hplus.min.js?v=4.1.0")></script>
    <script src=@Url.Content("~/Areas/Admin/scripts/contabs.min.js")></script>
    <script src=@Url.Content("~/Areas/Admin/scripts/plugins/pace/pace.min.js")></script>
</body>
</html>
